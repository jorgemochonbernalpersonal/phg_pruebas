{
  "name": "tu-nombre/api-rest",
  "version": "1.0.0",
  "require": {
    "php": ">=8.0",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:integration": "phpunit --testsuite Integration",
    "test:unit": "phpunit --testsuite Unit"
  }
}
